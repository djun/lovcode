{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "lovcode",
  "version": "0.1.0",
  "identifier": "app.lovpen.code",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:51216",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Lovcode",
        "width": 800,
        "height": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": { "x": 16, "y": 28 }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../third-parties/claude-code-templates/docs/components.json"
    ]
  }
}
